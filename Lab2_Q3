#include <stdio.h>
void main()
{
int opcount = 0;
int m, n, t,i,p=1;
while(n!=-1)
{
opcount = 0,p=1;
printf("Enter 2 nos: ");
scanf("%d%d",&m,&n);
if(m<n)
t = m;
else
t = n;
for(i=2;i<=t;i++)
{
if(m==1||n==1) break;
while(m%i==0 && n%i==0)
{
opcount++;
p=p*i;
m = m/i;
n = n/i;
}
}
printf("gcd = %d and opcount = %d\n",p,opcount);
}
}
